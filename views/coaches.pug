append body
	.container.body-container
		.row
			.col-md-4
				h1 Coach #{curCoach.name}
			.col-md-4
				h1.btn-group
					button.btn.btn-default.btn-lg.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Select a coach...&nbsp;
						span.caret
					ul.dropdown-menu
						each coach, i in coaches
							li
								a(href="/coaches/"+coach.id) #{coach.name}
									if coach.id == curCoach.id
										| &nbsp;(you)
		.row
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Stats
					.panel-body
						.list-group
							a.list-group-item(href="#") 
								h4.list-group-item-heading Most Casualties (9)
								h5.list-group-item-heading Mad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most TDs (7)
								h5.list-group-item-heading Bad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most Kills (1)
								h5.list-group-item-heading Mad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most SPPs (33)
								h5.list-group-item-heading Bad'zug
								p.list-group-item-text Population: Orc
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Teams
					.panel-body
						.list-group
							each team, i in teams
								a.list-group-item(href="/teams/"+team.id) #{team.name}
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Seasons
					.panel-body
						.list-group
							each season, i in seasons
								a.list-group-item(href="/seasons/"+season.id) #{season.name}