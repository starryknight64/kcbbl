append body
	.container.body-container
		.row
			.col-md-4
				h1 Coach #{curCoach.name}
			.col-md-4
				h1.btn-group
					button.btn.btn-default.btn-lg.dropdown-toggle(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") #{curCoach.name}&nbsp;
						span.caret
					ul.dropdown-menu
						each coach, i in coaches
							li
								if coach.id == curCoach.id
									a(href="#") #{coach.name} (you)
								else
									a(href="/coaches/"+coach.id) #{coach.name}
		.row
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Stats
					.panel-body
						.list-group
							a.list-group-item(href="#") 
								h4.list-group-item-heading Most Casualties (9)
								h5.list-group-item-heading Mad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most TDs (7)
								h5.list-group-item-heading Bad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most Kills (1)
								h5.list-group-item-heading Mad'zug
								p.list-group-item-text Population: Orc
							a.list-group-item(href="#")
								h4.list-group-item-heading Most SPPs (33)
								h5.list-group-item-heading Bad'zug
								p.list-group-item-text Population: Orc
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Teams
					.panel-body
						.list-group
							a.list-group-item(href="#") Population: Orc
							a.list-group-item(href="#") Byrchwood Blodgers
			.col-md-4
				.panel.panel-default
					.panel-heading
						h3.panel-title Seasons
					.panel-body
						.list-group
							a.list-group-item(href="/seasons/1") Season 1
							a.list-group-item(href="/seasons/2") Season 2
							a.list-group-item(href="/seasons/3") Season 3